<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bestmovies.zoom.bestmovies" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MoviesGrid"
            android:label="@string/app_name"
            android:theme="@style/MovieGridTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MovieDetails"
            android:label="@string/title_activity_movie_details"
            android:parentActivityName=".MoviesGrid" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bestmovies.zoom.bestmovies.MoviesGrid" />
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting"
            android:theme="@style/SettingsTheme"
            android:parentActivityName=".MoviesGrid" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bestmovies.zoom.bestmovies.MoviesGrid" />
        </activity>
        <provider
            android:authorities="com.bestmovies.zoom.bestmovies"
            android:name=".data.MoviesProvider" />
    </application>

</manifest>
